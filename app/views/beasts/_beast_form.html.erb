<%= simple_form_for(@beast) do |f| %>

<%= f.label :name %>
<%= f.text_field :name %> <br>

<%= f.association :type %> <br>

<%= f.label :description %>
<%= f.text_field :description %> <br>

<%= f.label :region %>
<%= f.text_field :region %> <br>

<%= f.label :price %>
<%= f.number_field :price %> <br>

<%= f.input :photos, as: :attachinary %>

<%= f.submit %>

<% end %>
