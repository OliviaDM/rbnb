<%= simple_form_for([@beast, @booking, @review], html: {class: "form-group form-box"}, :url => review_path)  do |f| %>

<%= "Sucker review" %> <br>
<%= f.label :sucker_rating %>
<%= f.number_field :sucker_rating, class: "form-control" %> <br>

<%= f.label :sucker_content %>
<%= f.text_field :sucker_content, class: "form-control" %> <br>

<%= f.submit class: "btn btn-primary" %>

<% end %>
