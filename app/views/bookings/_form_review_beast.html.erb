<%= simple_form_for([@beast, @booking, @review], html: {class: "form-group form-box"}, :url => review_path)  do |f| %>
<%= "Edit your review on this beast" %> <br>
<%= f.label :beast_rating %>
<%= f.number_field :beast_rating, class: "form-control" %> <br>

<%= f.label :beast_content %>
<%= f.text_field :beast_content, class: "form-control" %> <br>

<%= f.submit class: "btn btn-primary" %>

<% end %>
